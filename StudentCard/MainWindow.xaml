<Window x:Class="StudentCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentCard"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="358" FontFamily="Bahnschrift SemiBold" FontSize="48" Margin="0,90,0,0"><Run Language="ru-ru" Text="Введите группу"/></TextBlock>
        <TextBox x:Name="Groups" HorizontalAlignment="Center" Text="" VerticalAlignment="Center" Width="323" TextChanged="TextBox_TextChanged" FontFamily="Bahnschrift SemiBold" FontSize="30" FontWeight="Normal" TextWrapping="Wrap"/>
        <Button x:Name="Check_Buttons" Content="Проверить" HorizontalAlignment="Center" Margin="0,275,0,0"  VerticalAlignment="Top" FontFamily="Bahnschrift SemiLight" FontSize="30" Click="Button_Click"/>
    </Grid>
</Window>
